                                          materialDesign:HintAssist.Hint="Source Signal" 
                                          materialDesign:HintAssist.IsFloating="True">
                                    <ComboBoxItem Content="Signal name" IsSelected="True" />
                                </ComboBox>
                            </Grid>
                            <TextBlock Text="Filter setting " Margin="5" FontStyle="Italic" FontWeight="Bold"></TextBlock>
