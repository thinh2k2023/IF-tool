                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="23*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="246*"/>
                                    <ColumnDefinition Width="288*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0" materialDesign:HintAssist.Hint="Signal name" Margin="5,0,5,0" 
                                          IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}" 
                                          ItemsSource="{Binding ShortStringList}" Style="{StaticResource MaterialDesignOutlinedComboBox}" Grid.ColumnSpan="3" />
                                <ComboBox Grid.Column="3" materialDesign:HintAssist.Hint="Element" Margin="5,0,5,0"
                                          IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}" 
                                          ItemsSource="{Binding ShortStringList}" Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                            </Grid>
                            <WrapPanel >

                            </WrapPanel>
                            <TextBlock Text="Trigger setting" Margin="5" FontWeight="Bold"></TextBlock>
                            <ListBox Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineListBox}">
                                <ListBoxItem Content="Push button" IsSelected="True" />
                                <ListBoxItem Content="Toggle button" />
                                <ListBoxItem Content="Logical condition" />
                            </ListBox>
                            <TextBlock Text="Action setting" Margin="5" FontWeight="Bold"></TextBlock>
                            <ListBox Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineListBox}">
                                <ListBoxItem Content="Fixed value" IsSelected="True" />
                                <ListBoxItem Content="Ramp up" />
                                <ListBoxItem Content="Ramp down" />
                                <ListBoxItem Content="Pulse" />
                                <ListBoxItem Content="Triangle wave"/>
                            </ListBox>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  Margin="1"
                            CornerRadius="5" BorderBrush="DodgerBlue" BorderThickness="1" >
                        <StackPanel>
                            <TextBlock Text="Trigger condition setting " Margin="5" FontStyle="Italic" FontWeight="Bold"></TextBlock>
                            <WrapPanel>
                                <ComboBox Margin="5" Width="200"
                                          materialDesign:HintAssist.Hint="Source Signal" 
                                          materialDesign:HintAssist.IsFloating="True">
                                    <ComboBoxItem Content="Signal name" IsSelected="True" />
                                </ComboBox>
                                <ComboBox Margin="5" Width="100"
                                          materialDesign:HintAssist.Hint="Comparison" 
                                          materialDesign:HintAssist.IsFloating="True">
                                    <ComboBoxItem Content="=" IsSelected="True" />
                                    <ComboBoxItem Content="≠" IsSelected="True" />
                                    <ComboBoxItem Content="&lt;" IsSelected="True" />
                                    <ComboBoxItem Content=">" IsSelected="True" />
                                    <ComboBoxItem Content="≦" IsSelected="True" />
                                    <ComboBoxItem Content="≧" IsSelected="True" />
                                </ComboBox>
                                <TextBox VerticalAlignment="Center" Margin="5" Width="100"
                                         materialDesign:HintAssist.Hint="Value" 
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                <TextBlock Text="[Unit] " Margin="5" VerticalAlignment="Bottom" ></TextBlock>
                            </WrapPanel>
                            <TextBlock Text="Action setting" Margin="5" FontStyle="Italic" FontWeight="Bold"></TextBlock>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Column="0" Text="Value A: Value of Logic is OFF" HorizontalAlignment="Center" VerticalAlignment="Bottom" ></TextBlock>
                                <ComboBox Grid.Column="1" Margin="5 0 5 0"
                                          materialDesign:HintAssist.Hint="Source Signal" 
                                          materialDesign:HintAssist.IsFloating="True">
                                    <ComboBoxItem Content="Signal name" IsSelected="True" />
                                </ComboBox>
                                <TextBlock Grid.Column="0" Grid.Row="1" Text="Value B: Value of Logic is ON" HorizontalAlignment="Center"  VerticalAlignment="Bottom" ></TextBlock>
