                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Delay filter of action start" Margin="5" FontStyle="Italic"></TextBlock>
                                    <WrapPanel >
                                        <ToggleButton Width="50" Style="{StaticResource ToggleButton_custom}"/>
                                        <TextBox VerticalAlignment="Center" Margin="5" Width="100"
                                             materialDesign:HintAssist.Hint="Value" 
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                        <ComboBox Margin="5" Width="100"
                                              materialDesign:HintAssist.Hint="Unit" 
                                              materialDesign:HintAssist.IsFloating="True">
                                            <ComboBoxItem Content="ms" IsSelected="True" />
                                        </ComboBox>
                                    </WrapPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Delay filter of action stop" Margin="5" FontStyle="Italic"></TextBlock>
                                    <WrapPanel >
                                        <ToggleButton Width="50" Style="{StaticResource ToggleButton_custom}"/>
                                        <TextBox VerticalAlignment="Center" Margin="5" Width="100"
                                                 materialDesign:HintAssist.Hint="Value" 
                                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                        <ComboBox Margin="5" Width="100"
                                                  materialDesign:HintAssist.Hint="Unit" 
                                                  materialDesign:HintAssist.IsFloating="True">
                                            <ComboBoxItem Content="ms" IsSelected="True" />
                                        </ComboBox>
                                    </WrapPanel>
                                </StackPanel>

                            </Grid>

                        </StackPanel>
                    </Border>



